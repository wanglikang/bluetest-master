                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1号舵机" />

                <EditText
                    android:id="@+id/et_postion_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="位置" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/et_speed_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="速度" />

                <Button
                    android:id="@+id/bt_debug_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="调试" />
            </LinearLayout>

